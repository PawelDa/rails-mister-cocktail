<div id="my-navbar">
  <div id="clock and date">
    <h3> <%= @time %></h3>
  </div>
  <div id="buttons">
    <% if action_name == "index" %>
      <%= link_to 'Create cocktail', new_cocktail_path, class: "navbar-buttons" %>
    <% elsif action_name == "new" %>
      <%= link_to "Home", root_path, class: "navbar-buttons" %>
    <% else %>
      <%= link_to "Home", root_path, class: "navbar-buttons" %>
      <%= link_to 'Create cocktail', new_cocktail_path, class: "navbar-buttons" %>
    <% end %>
  </div>
</div>
