<div>
  <div>
    <div><%= @cocktail.name %></div>
    <div><%= image_tag "https://www.acouplecooks.com/wp-content/uploads/2019/09/Whiskey-Sour-111s.jpg" %> </div>
  </div>
  <% @cocktail.doses.each do |dose| %>
    <%= dose.description %> 
    <%= dose.ingredient.name %> 
    <%= link_to 'delete', dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %>
  <% end %>
<%= link_to 'edit', edit_cocktail_path(@cocktail)%>
<%= link_to 'delete', cocktail_path(@cocktail), method: :delete, data: { confirm: 'Are you sure?'} %>

<%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.association :ingredient, collection: Ingredient.order('name ASC'), input_html: { class: "select2" } %>
  <%= f.input :description, placeholder: "e.g. 100 ml" %>
  <%= f.submit "Add dose"%>
<% end %>
